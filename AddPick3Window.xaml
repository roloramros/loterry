<Window x:Class="FloridaLotteryApp.AddPick3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Añadir registro"
        Height="420"
        Width="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <StackPanel>

            <TextBlock Text="Juego" FontWeight="Bold"/>
            <ComboBox x:Name="ComboGame" Margin="0,4,0,10">
                <ComboBoxItem Content="Pick 3" Tag="pick3" IsSelected="True"/>
                <ComboBoxItem Content="Pick 4" Tag="pick4"/>
            </ComboBox>

            <TextBlock Text="Fecha" FontWeight="Bold"/>
            <DatePicker x:Name="DatePickerDate" Margin="0,4,0,10"/>

            <TextBlock Text="Sorteo" FontWeight="Bold"/>
            <ComboBox x:Name="ComboDrawTime" Margin="0,4,0,10">
                <ComboBoxItem Content="Mediodía" Tag="M" IsSelected="True"/>
                <ComboBoxItem Content="Noche" Tag="E" />
            </ComboBox>

            <TextBlock Text="Número" FontWeight="Bold"/>
            <TextBox x:Name="TxtNumber" Margin="0,4,0,10" MaxLength="4"/>

            <TextBlock Text="Fireball (opcional)" FontWeight="Bold"/>
            <TextBox x:Name="TxtFireball" Margin="0,4,0,14" MaxLength="1"/>

            <Button Content="Guardar"
                    Padding="10"
                    HorizontalAlignment="Stretch"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
