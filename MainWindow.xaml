<Window x:Class="FloridaLotteryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Florida Lottery App"
        Height="600"
        Width="400">

    <Grid Margin="20">
        <StackPanel>



    <TextBlock Text="Última fecha en BD" FontSize="16" FontWeight="Bold"/>
    <TextBlock x:Name="TxtDate" FontSize="18" Margin="0,5,0,15"/>


    <TextBlock Text="PICK 3 - Mediodía (M)" FontWeight="Bold"/>
    <TextBlock x:Name="TxtP3Midday" FontSize="18" Margin="0,3,0,15"/>
    <TextBlock Text="PICK 3 - Noche (E)" FontWeight="Bold"/>
    <TextBlock x:Name="TxtP3Night" FontSize="18" Margin="0,3,0,8"/>

    <TextBlock Text="PICK 4 - Mediodía (M)" FontWeight="Bold"/>
    <TextBlock x:Name="TxtP4Midday" FontSize="18" Margin="0,3,0,15"/>
    <TextBlock Text="PICK 4 - Noche (E)" FontWeight="Bold"/>
    <TextBlock x:Name="TxtP4Night" FontSize="18" Margin="0,3,0,8"/>
    




    <Button Content="Añadir registro"
            Padding="20,10"
            HorizontalAlignment="Center"
            Click="AddManual_Click"/>

    <Button Content="Buscar"
        Margin="0,10,0,0"
        Padding="20,10"
        HorizontalAlignment="Center"
        Click="Search_Click"/>


</StackPanel>

    </Grid>
</Window>
