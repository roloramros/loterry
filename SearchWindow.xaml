<Window x:Class="FloridaLotteryApp.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buscar en histórico"
        Height="560"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <TabControl>

            <!-- ================= TAB 1: BUSCAR POR FECHA ================= -->
            <TabItem Header="Por fecha">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Selector fecha -->
                    <StackPanel Orientation="Horizontal">
                        <DatePicker x:Name="DpDate" Width="160"/>
                        <Button Content="Buscar"
                                Margin="10,0,0,0"
                                Padding="14,6"
                                Click="SearchByDate_Click"/>
                    </StackPanel>

                    <!-- Resultados -->
                    <StackPanel Grid.Row="1" Margin="0,16,0,0">

                        <TextBlock Text="PICK 3" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="Mediodía (M)" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtP3Midday" FontSize="18" Margin="0,2,0,12"/>
                        <TextBlock Text="Noche (E)" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtP3Night" FontSize="18" Margin="0,2,0,6"/>

                        <Separator/>

                        <TextBlock Text="PICK 4" FontSize="16" FontWeight="Bold" Margin="0,10,0,0"/>
                        <TextBlock Text="Mediodía (M)" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtP4Midday" FontSize="18" Margin="0,2,0,0"/>
                        <TextBlock Text="Noche (E)" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtP4Night" FontSize="18" Margin="0,2,0,6"/>

                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- ================= TAB 2: BUSCAR POR COMBINACIÓN ================= -->
            <TabItem Header="Por combinación">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Entrada -->
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:Name="TxtNumber"
                                 Width="90"
                                 MaxLength="4"
                                 VerticalContentAlignment="Center"/>
                        <Button Content="Buscar"
                                Margin="10,0,0,0"
                                Padding="14,6"
                                Click="SearchByNumber_Click"/>
                        <TextBlock x:Name="TxtCount"
                                   Margin="12,6,0,0"
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1"
                               Margin="0,10,0,6"
                               Opacity="0.8"
                               Text="Resultados encontrados:"/>

                    <!-- Lista resultados -->
                    <ListView Grid.Row="2"
                            x:Name="LvHits">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Fecha"
                                                DisplayMemberBinding="{Binding Date}"
                                                Width="110"/>
                                <GridViewColumn Header="Juego"
                                                DisplayMemberBinding="{Binding Game}"
                                                Width="70"/>
                                <GridViewColumn Header="Tirada"
                                                DisplayMemberBinding="{Binding Icon}"
                                                Width="40"/>                
                                <GridViewColumn Header="Número"
                                                DisplayMemberBinding="{Binding Number}"
                                                Width="80"/>
                                <GridViewColumn Header="FB"
                                                DisplayMemberBinding="{Binding Fireball}"
                                                Width="40"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
